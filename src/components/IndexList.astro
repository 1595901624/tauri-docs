---
import type { TreeNode } from '@src/utils'
import { l } from 'astro-i18n'

interface Props {
  tree: TreeNode[]
}

const { tree } = Astro.props
---

<div class="grid lg:grid-cols-2 gap-4">
  {
    tree.map((node) => (
      <a class="card" href={l(`docs/${node.slug}`)}>
        <div class="text-lg font-bold">{node.name}</div>
        {node.description ?? <div>{node.description}</div>}
      </a>
    ))
  }
</div>
