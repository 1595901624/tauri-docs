---
import { l, t } from 'astro-i18n'
import NavBarSocial from './NavBarSocial.astro'
const year = new Date().getFullYear()
import logo from '@src/images/tauri_logo_dark.svg'
---

<style>
  ul li {
    @apply py-1;
  }
</style>

<footer class="py-4 flex flex-col gap-8">
  <hr />
  <div class="grid lg:grid-cols-4 gap-8 justify-items-start">
    <div class="flex flex-col gap-6">
      <div>
        <a href={l('/')}>
          <img src={logo} alt="Tauri logo" class="h-10" />
        </a>
      </div>

      <div class="-ml-3">
        <ul class="flex">
          <NavBarSocial />
        </ul>
      </div>
    </div>
    <ul>
      <li class="small-caps">{t('global.nav.documentation')}</li>
      <li>
        <a href={l('/docs/1/getting-started')} class="text-base-content">
          {t('global.nav.getting-started')}
        </a>
      </li>
      <li>
        <a href={l('/docs/1/getting-started')} class="text-base-content">
          {t('global.nav.features')}
        </a>
      </li>
    </ul>
    <ul>
      <li class="small-caps">{t('global.nav.references')}</li>
      <li>
        <a href={l('/api/core-js/1')} class="text-base-content">
          {t('global.nav.javascript-api')}
        </a>
      </li>
      <li>
        <a href={l('/api/core-js/1')} class="text-base-content">
          {t('global.nav.rust-api')}
        </a>
      </li>
      <li>
        <a href={l('/api/core-js/1')} class="text-base-content">
          {t('global.nav.tauri-config')}
        </a>
      </li>
      <li>
        <a href={l('/api/core-js/1')} class="text-base-content">
          {t('global.nav.tauri-cli')}
        </a>
      </li>
    </ul>
    <ul>
      <li class="small-caps">{t('global.nav.about')}</li>
      <li>
        <a href="" class="text-base-content">TODO</a>
      </li>
      <li>
        <a href="https://tauri.app/blog" class="text-base-content"
          >{t('global.nav.blog')}</a
        >
      </li>
      <li>
        <a href="mailto:contact@tauri.app" class="text-base-content"
          >{t('global.nav.email')}</a
        >
      </li>
      <li>
        <a
          href="https://opencollective.com/tauri"
          target="_blank"
          class="text-base-content">{t('global.nav.open-collective')}</a
        >
      </li>
    </ul>
  </div>
  <div>
    {t('global.footer-copyright', { year: String(year) })}
  </div>
</footer>
