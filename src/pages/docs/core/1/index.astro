---
import Layout from '@src/layouts/Layout.astro'
import { convertCollectionToTree } from '@src/utils'
import { t, astroI18n } from 'astro-i18n'
import IndexList from '@src/components/IndexList.astro'

const tree = await convertCollectionToTree(
  'docs',
  astroI18n.langCode,
  undefined,
  4
)
---

<Layout title={t('docs.title')}>
  <main>
    <h1 class="h1">{t('docs.title')}</h1>
    <IndexList tree={tree} />
  </main>
</Layout>
