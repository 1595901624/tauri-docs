---
import Footer from '../components/Layout/Footer.astro'
import Layout from './BaseLayout.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<Layout title={title}>
  <div class="bg-base-200 h-[calc(100vh - var(--nav-height))]">
    <div
      class="hidden lg:block fixed top-[var(--nav-height)] left-0 bottom-0 w-48 pt-8"
    >
      <slot name="leading-sidebar" />
    </div>
    <div class="px-8 lg:w-[calc(100vw-28rem)] max-w-[100ch] mx-auto pt-8">
      <article>
        <slot />
      </article>
      <Footer />
    </div>
    <div
      class="hidden lg:block fixed top-[var(--nav-height)] right-0 bottom-0 w-48 pt-8 pl-2 overflow-y-auto"
    >
      <slot name="trailing-sidebar" />
    </div>
  </div>
</Layout>
