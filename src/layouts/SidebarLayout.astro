---
import Footer from '../components/Layout/Footer.astro'
import Layout from './BaseLayout.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<Layout title={title}>
  <div class="flex">
    <div
      class="hidden lg:block shrink-0 w-56 h-[var(--nav-height)] overflow-y-auto py-8 px-2"
    >
      <slot name="leading-sidebar" />
    </div>
    <div class="h-[var(--nav-height)] overflow-y-auto p-8">
      <article>
        <slot />
      </article>
      <Footer />
    </div>
    <div
      class="hidden lg:block shrink-0 w-56 h-[var(--nav-height)] overflow-y-auto py-8 px-2"
    >
      <slot name="trailing-sidebar" />
    </div>
  </div>
</Layout>
